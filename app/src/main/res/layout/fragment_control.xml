<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2ECFF"
    tools:context=".ui.control.ControlFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/materialCardView"
        android:layout_width="378dp"
        android:layout_height="206dp"

        android:background="#FFFFFF"
        android:backgroundTint="@color/white"
        android:elevation="4dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTintMode="screen"
            android:padding="18dp"
            android:paddingStart="8dp"
            android:paddingTop="5dp"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/recommendation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/montserrat_semibold_600"
                android:text="@string/recommendation"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.099"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
            <TextView
                android:id="@+id/recommendation_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/recommendation_title"
                app:layout_constraintStart_toStartOf="@id/recommendation_title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="486dp"
        android:layout_marginTop="276dp"

        android:background="#FFFFFF"
        android:backgroundTint="@color/white"
        android:foregroundGravity="center_vertical|center_horizontal"
        app:cardCornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#C4C4C4"
        app:strokeWidth="1sp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTintMode="screen"
            android:padding="18dp"
            android:paddingStart="8dp"
            android:paddingTop="5dp"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/control_box"
                android:layout_width="376dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/montserrat_semibold_600"
                android:text="@string/controls"
                android:textAlignment="center"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.485"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/control_desc"
                android:layout_width="376dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/montserrat_semibold_600"
                android:text="@string/clickToDoControl"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.457"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/control_box"
                app:layout_constraintVertical_bias="0.021" />


            <androidx.cardview.widget.CardView
                android:id="@+id/materialWaterPump"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/control_desc">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:cardCornerRadius="15dp"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:id="@+id/waterpump_title"
                        android:layout_width="180dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@null"
                        android:ems="10"
                        android:fontFamily="@font/montserrat_semibold_600"
                        android:text="@string/waterpump_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/imageViewWater"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageViewWater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="25dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/waterpumpicon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.432" />

                    <TextView
                        android:id="@+id/On_OffWater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/onoff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/waterpump_title"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/waterpump_title"
                        app:layout_constraintTop_toBottomOf="@+id/waterpump_title"
                        app:layout_constraintVertical_bias="0.111" />

                    <ImageView
                        android:id="@+id/powerButtonWater"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"

                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_baseline_power_settings_new_24"
                        app:layout_constraintBottom_toBottomOf="@+id/On_OffWater"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/waterpump_title"
                        app:layout_constraintTop_toTopOf="@+id/waterpump_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/materialNutrientPump"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialWaterPump">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:cardCornerRadius="15dp"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:id="@+id/Nutrientpump_title"
                        android:layout_width="180dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@null"
                        android:ems="10"
                        android:fontFamily="@font/montserrat_semibold_600"
                        android:text="@string/nutrientpump_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/imageViewNutrient"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageViewNutrient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="25dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/nutrientpumpicon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.432" />

                    <TextView
                        android:id="@+id/On_OffNutrient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/onoff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/Nutrientpump_title"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/Nutrientpump_title"
                        app:layout_constraintTop_toBottomOf="@+id/Nutrientpump_title"
                        app:layout_constraintVertical_bias="0.111" />

                    <ImageView
                        android:id="@+id/powerButtonNutrient"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"

                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_baseline_power_settings_new_24"
                        app:layout_constraintBottom_toBottomOf="@+id/On_OffNutrient"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/Nutrientpump_title"
                        app:layout_constraintTop_toTopOf="@+id/Nutrientpump_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/materialLightPump"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialNutrientPump">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:cardCornerRadius="15dp"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:id="@+id/Light_title"
                        android:layout_width="180dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@null"
                        android:ems="10"
                        android:fontFamily="@font/montserrat_semibold_600"
                        android:text="@string/light_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/imageViewLight"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageViewLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="25dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/lighticon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.432" />

                    <TextView
                        android:id="@+id/On_OffLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/onoff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/Light_title"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/Light_title"
                        app:layout_constraintTop_toBottomOf="@+id/Light_title"
                        app:layout_constraintVertical_bias="0.111" />

                    <ImageView
                        android:id="@+id/powerButtonLight"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"

                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_baseline_power_settings_new_24"
                        app:layout_constraintBottom_toBottomOf="@+id/On_OffLight"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/Light_title"
                        app:layout_constraintTop_toTopOf="@+id/Light_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>